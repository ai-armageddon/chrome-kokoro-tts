{
  "manifest_version": 3,
  "name": "Kokoro TTS",
  "version": "1.0",
  "description": "Basic TTS using local Kokoro API",
  "permissions": [
    "activeTab",
    "scripting",
    "background",
    "offscreen"
  ],
  "host_permissions": [
    "http://localhost:8000/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
